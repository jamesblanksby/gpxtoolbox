{
    "name": "jamesblanksby/gpxtoolbox",
    "type": "library",
    "version": "1.4",
    "description": "A simple library for creating, parsing and modifying GPX files.",
    "license": "MIT",
    "authors": [
        {
            "name": "James Blanksby",
            "email": "james@thisismyengine.com"
        }
    ],
    "config": {
		"sort-packages": true
	},
    "require": {
        "lib-libxml": "*",
        "ext-simplexml": "*",
        "ext-dom": "*"
    },
    "autoload": {
        "psr-4": {
            "GPXToolbox\\": "src/GPXToolbox/"
        }
    },
    "require-dev": {
		"friendsofphp/php-cs-fixer": "^3.8",
		"phpstan/phpstan": "^1.8"
	},
    "scripts": {
		"csfix": "php vendor/bin/php-cs-fixer fix",
		"analyse": "vendor/bin/phpstan analyse --memory-limit 1G"
	}
}
