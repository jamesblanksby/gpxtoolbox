{
    "name": "jamesblanksby/gpxtoolbox",
    "type": "library",
    "version": "1.6.2",
    "description": "A simple library for creating, parsing and modifying GPX files.",
    "license": "MIT",
    "authors": [
        {
            "name": "James Blanksby",
            "email": "james@thisismyengine.com"
        }
    ],
    "config": {
        "platform": {
			"php": "8.1"
		},
		"sort-packages": true
	},
    "require": {
        "ext-dom": "*",
        "ext-simplexml": "*",
        "lib-libxml": "*"
    },
    "autoload": {
        "psr-4": {
            "GPXToolbox\\": "src/GPXToolbox/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GPXToolbox\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
		"cs:check": [
			"@putenv PHP_CS_FIXER_IGNORE_ENV=1",
			"php-cs-fixer fix --dry-run --diff --ansi"
		],
		"cs:fix": [
			"@putenv PHP_CS_FIXER_IGNORE_ENV=1",
			"php-cs-fixer fix --ansi"
		],
		"stan": "phpstan analyse -c phpstan.neon --memory-limit 1G --ansi",
        "test": "./vendor/bin/phpunit tests"
	}
}
